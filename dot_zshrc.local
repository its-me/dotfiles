# neovim
alias vi='nvim'
alias vim='nvim'
nvim() {
  local subcmd=$1
  shift

  case "$subcmd" in
    u)
      command nvim --headless -c "Lazy! sync" +qa
      ;;
    *)
      command nvim "$subcmd" "$@"
      ;;
  esac
}


# kopia
k() {
  local subcmd=$1
  shift

  case "$subcmd" in
    b)
      echo && \
      sudo kopia snapshot create /etc && \
      echo && \
      kopia snapshot create ~
      echo
      ;;
    s)
      echo && \
      sudo kopia snapshot list /etc && \
      echo && \
      kopia snapshot list ~
      echo
      ;;
    *)
      kopia "$subcmd" "$@"
      ;;
  esac
}


